<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_dialog_hint"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            tools:text="提示" />

        <TextView
            android:id="@+id/dialog_tv_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_10"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_13"
            tools:text="缓存大小为1.98M，确定处理吗？" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="#E8E8EB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#1B87FE"
            android:textSize="@dimen/sp_13"
            tools:text="取消" />

        <View
            android:id="@+id/dialog_btn_divider"
            android:layout_width="@dimen/dp_05"
            android:layout_height="match_parent"
            android:background="#E8E8EB" />

        <TextView
            android:id="@+id/dialog_tv_ensure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#1B87FE"
            android:textSize="@dimen/sp_13"
            tools:text="确定" />
    </LinearLayout>
</LinearLayout>

